<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/view_round_white_15"
    android:gravity="center"
    android:padding="25dp">
    
    <!-- Linear layout 넣기? 암튼 수정 중 -->

    <TextView
        android:id="@+id/tv_edit_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_extra_bold"
        android:minHeight="30dp"
        android:text="닉네임 변경"
        android:textColor="@color/black"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/edit_nickname_cutline_deco_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_400"
        app:layout_constraintBottom_toBottomOf="@+id/tv_edit_nickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_edit_nickname">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/et_edit_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_edittext_background"
        android:layout_marginVertical="14dp"
        android:paddingVertical="2.25dp"
        android:paddingHorizontal="7.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_nickname_cutline_deco_layout" />



</androidx.constraintlayout.widget.ConstraintLayout>