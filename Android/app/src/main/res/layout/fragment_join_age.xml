<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.view.start.JoinAgeFragment">


    <com.app.myfoottrip.ui.view.start.JoinBackButtonCustomView
            android:id="@+id/join_back_button_customview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="42dp"
            android:layout_marginEnd="42dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        <ProgressBar
                android:id="@+id/join_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/join_age_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="102dp"
                android:text="@string/join_age_fragment_title"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/join_user_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                tools:text="짱구님!"
                android:text=""
                android:textColor="@color/gray_500"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/join_age_title_tv"
                app:layout_constraintTop_toBottomOf="@id/join_age_title_tv" />

        <TextView
                android:id="@+id/join_age_subtitle_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/join_age_fragment_subtitle"
                android:textColor="@color/gray_500"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@id/join_user_nickname_tv"
                app:layout_constraintTop_toBottomOf="@id/join_user_nickname_tv" />


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/join_age_deco_constlayout"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="8dp"
                android:background="@color/gray_400"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/join_age_subtitle_tv" />

        <GridLayout
                android:id="@+id/age_girdlayout"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="60dp"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:columnOrderPreserved="false"
                android:foregroundGravity="center"
                android:rowCount="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/join_age_deco_constlayout">


            <ImageButton
                    android:id="@+id/join_age_button_10"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/age10_button_non_select" />

            <ImageButton
                    android:id="@+id/join_age_button_20"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"

                    android:adjustViewBounds="true"
                    android:background="@drawable/age20_button_non_select" />

            <ImageButton
                    android:id="@+id/join_age_button_30"
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/age30_button_non_select" />

            <ImageButton
                    android:id="@+id/join_age_button_40"
                    android:layout_width="80dp"
                    android:layout_height="100dp"

                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/age40_button_non_select" />

            <ImageButton
                    android:id="@+id/join_age_button_50"

                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/age50_button_non_select" />

            <ImageButton
                    android:id="@+id/join_age_button_60"

                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_gravity="fill"
                    android:layout_margin="10dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/age60_button_non_select" />


        </GridLayout>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/join_next_button"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="120dp"
                android:background="@drawable/ripple"
                android:backgroundTint="@color/join_next_button_background_color"
                android:padding="12dp"
                android:text="@string/join_complete_text"
                android:textColor="@color/join_next_button_text_color"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>